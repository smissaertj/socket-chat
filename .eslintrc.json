{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always",
            { "omitLastInOneLineBlock": true }
        ],
        "space-in-parens": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
            "code": 120,
            "tabWidth": 2,
            "ignoreComments": true
            }
        ],
        "array-bracket-spacing": [
            "error",
            "always"
        ]
    }
}